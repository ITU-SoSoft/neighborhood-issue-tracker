# Development Dockerfile for FastAPI with hot reload and dev dependencies
FROM python:3.13-slim

# Install build dependencies (needed for some Python packages)
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Set up environment
ENV UV_COMPILE_BYTECODE=1
ENV UV_LINK_MODE=copy
ENV UV_PYTHON_PREFERENCE=only-system

WORKDIR /app

# Copy dependency files
COPY pyproject.toml uv.lock .python-version ./

# Install ALL dependencies including dev (pytest, ruff, mypy)
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen --no-install-project

# Copy application code
COPY . /app

# Install the project
RUN --mount=type=cache,target=/root/.cache/uv \
    uv sync --frozen

# Set PATH for uv virtual environment
ENV PATH="/app/.venv/bin:$PATH"

# Fix line endings for entrypoint if it exists (Windows compatibility)
RUN if [ -f /app/entrypoint.sh ]; then sed -i 's/\r$//' /app/entrypoint.sh && chmod +x /app/entrypoint.sh || true; fi

EXPOSE 8000

# Default command: run with hot reload
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
