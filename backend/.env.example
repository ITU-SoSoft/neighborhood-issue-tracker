# SoSoft Backend Environment Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME="SoSoft API"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development  # development, staging, production

# API prefix
API_V1_PREFIX="/api/v1"

# =============================================================================
# Database (PostgreSQL with PostGIS)
# =============================================================================
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/sosoft

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# OTP Settings
# =============================================================================
OTP_EXPIRE_MINUTES=5
OTP_LENGTH=6

# =============================================================================
# Twilio SMS (for OTP and notifications)
# =============================================================================
# Get credentials from https://console.twilio.com
TWILIO_ENABLED=false  # Set to true in production
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567  # Your Twilio phone number

# =============================================================================
# Resend (Email service)
# =============================================================================
# Get credentials from https://resend.com/api-keys
RESEND_ENABLED=false  # Set to true in production
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@mahallem.biz.tr
RESEND_FROM_NAME=Mahallem Support

# =============================================================================
# Email Verification
# =============================================================================
EMAIL_VERIFICATION_EXPIRE_HOURS=24
NEXT_PUBLIC_APP_BASE_URL=https://mahallem.biz.tr

# =============================================================================
# MinIO (S3-compatible object storage)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=sosoft-uploads
MINIO_SECURE=false  # Set to true for HTTPS

# =============================================================================
# CORS Settings
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000
