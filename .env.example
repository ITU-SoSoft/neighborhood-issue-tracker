# Mahallem Production Environment Configuration
# Copy this file content to Dokploy Environment Variables
# Generate secure keys with: openssl rand -hex 32

# =============================================================================
# Database (PostgreSQL with PostGIS)
# =============================================================================
POSTGRES_USER=mahallem_prod
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
POSTGRES_DB=mahallem_prod

# =============================================================================
# JWT Authentication
# =============================================================================
# IMPORTANT: Generate a secure key with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

# =============================================================================
# MinIO (S3-compatible object storage)
# =============================================================================
MINIO_ACCESS_KEY=minio_prod_admin
MINIO_SECRET_KEY=CHANGE_ME_GENERATE_STRONG_PASSWORD
MINIO_PUBLIC_ENDPOINT=storage.mahallem.biz.tr

# =============================================================================
# Twilio SMS (Optional - for OTP and notifications)
# =============================================================================
# Get credentials from https://console.twilio.com
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# Resend (Email service for verification)
# =============================================================================
# Get credentials from https://resend.com/api-keys
RESEND_ENABLED=true
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@mahallem.biz.tr
RESEND_FROM_NAME=Mahallem Support

# =============================================================================
# URLs and CORS
# =============================================================================
NEXT_PUBLIC_APP_BASE_URL=https://mahallem.biz.tr
NEXT_PUBLIC_API_BASE_URL=https://api.mahallem.biz.tr/api/v1
CORS_ORIGINS=https://mahallem.biz.tr,https://api.mahallem.biz.tr

# =============================================================================
# Email Verification
# =============================================================================
EMAIL_VERIFICATION_EXPIRE_HOURS=24

# =============================================================================
# Optional
# =============================================================================
SEED_TEST_DATA=false
